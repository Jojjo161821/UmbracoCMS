@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.TestimonialSection)Model.Content;
}

<section class="relative bg-gray-light px-4">
    <div class="custom-container grid md:grid-cols-2 py-24 relative z-10">
        <div>
            <p class="text-sm text-secondary font-bold text-center md:text-left">@content.Label</p>
            <h2 class="text-2xl text-primary font-bold leading-tight pb-4 text-center md:text-left md:text-[2.5rem] md:pr-20">@content.Title</h2>
            <p class="text-md md:text-xl text-gray-2 text-center md:text-left italic pb-6">@content.InfoText</p>
            @if(content.RatingImg != null)
            {
                <img class="pb-6 justify-self-center md:justify-self-start" src="@content.RatingImg.Url()" alt="5 star rating">
            }          
            <p class="text-sm text-black text-center md:text-left pb-1">@content.ReviewerName</p>
            <p class="text-xl text-black text-center md:text-left">@content.CompanyName</p>
        </div>
    </div>

    <div class="hidden md:block absolute top-0 right-0 h-full w-1/2">
        @if (content.Image != null)
        {
            <img src="@content.Image.Url()" alt="Picture of Kevin Gardner" class="h-full w-full object-cover">
        }
        
    </div>

</section>