@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.ChooseUsSection)Model.Content;
}

<section id="choose-us" class="custom-container mt-30 px-4">
    <div class="-z-10 absolute translate-y-15">
        @if (content.BackgroundImage != null)
        {
            <img src="@content.BackgroundImage.Url()" alt="">
        }      
    </div>
    <div class="flex flex-col items-center">
        <h2 class=" text-xl md:text-[2.5rem]">
            @Html.Raw(content.ChooseUsTitle)
        </h2>
        <p class="text-body-text text-base text-center my-10 md:mx-48 md:text-left">@content.ChooseUsDescription</p>
        <a class="bg-primary text-secondary-2 text-base font-bold rounded cursor-pointer py-4 px-10" href="@content?.ChooseUsLink?.Url">@content?.ChooseUsLink?.Name</a>
    </div>

    <div class="mt-20">
        @if (content?.ChooseUsImage != null)
        {
            <img src="@content.ChooseUsImage.Url()" alt="picture on people">
        }
        
    </div>

</section>
