@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.TeamSection)Model.Content;
    var teamList = content.TeamMemberList;
}

<section id="experts" class="py-16 bg-light">
    <div class="custom-container px-4">
        <div class="flex flex-col items-center">
            <p class="text-sm text-secondary text-center font-bold uppercase">Our expert</p>
            <h2 class="text-2xl md:text-[2.5rem] text-primary font-bold text-center">A team of professionalswith years of experience</h2>
        </div>

        <div class="flex flex-wrap gap-y-5 pt-5 pb-5 -mx-2">

            @if (teamList != null)
            {
                for (var i = 0; i < teamList.Count; i++)
                {
                    var colClass = "";
                    var member = teamList[i];
                    if(i == 0)
                    {
                        colClass = "w-1/1 md:w-1/3";
                    }
                    else
                    {
                        colClass = i < 3 ? "w-1/2 md:w-1/3" : "w-1/2 md:w-1/4";
                    }
                    
                    <div class="@colClass px-2">
                        <partial name="Partials/Blocklist/Components/TeamMember" model="member" />
                    </div>
                }
            }
        </div>

    </div>
</section>

